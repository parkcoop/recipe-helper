<div id="recipe">
  <h1>{{this.title}}</h1>
  <ul id="ingredients">
    {{#if this.vegan}}
    <li>Vegan <br></li>
    {{/if}}
    {{#if this.vegetarian}}
    <li>Vegetarian <br></li>
    {{/if}}
    {{#if this.ketogenic}}
    <li>Keto <br></li>
    {{/if}}
    {{#if this.veryPopular}}
    <li>Popular <br></li>
    {{/if}}
  </ul>
  {{#if this.preparationMinutes}}
  <h3><img src="/images/clock.png" width="15px"> {{this.preparationMinutes}} minutes to prepare</h3>
  {{/if}}
  <p id="description">{{this.instructions}}</p>
  <ul>
    {{#each extendedIngredients}}
    <li>{{this.originalString}}</li>
    {{/each}}
  </ul>

  <a href="/save/{{this.id}}"><button>Add to My Recipes</button></a><br><br>

  <form method="post" action="/textRecipe">
    <input type="tel" name="telphone" placeholder="8888888888" pattern="[0-9]{3}[0-9]{3}[0-9]{4}" maxlength="12"
      title="##########" required />
    <input type="text" name="ingredients" value="{{#each extendedIngredients}} - {{this.originalString}}{{/each}}"
      hidden>
    <button>Text me these ingredients</button>
  </form>
</div>